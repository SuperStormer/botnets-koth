{
	"extends": [
		"eslint:recommended",
		"plugin:unicorn/recommended",
		"prettier",
		"prettier/unicorn"
	],
	"env": {
		"es6": true,
		"browser": true,
		"node": true
	},
	"parserOptions": {
		"ecmaVersion": 8,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"plugins": ["unicorn"],
	"rules": {
		"no-console": "off",
		"no-duplicate-case": "warn",
		"no-lonely-if": "warn",
		"unicorn/filename-case": "off",
		"unicorn/prevent-abbreviations": "off",
		"unicorn/prefer-query-selector": "off",
		"unicorn/prefer-add-event-listener": "off"
	},
	"globals": {
		"React": true,
		"ReactDOM": false
	}
}
